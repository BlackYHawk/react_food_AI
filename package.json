{
  "name": "food-ai-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Food AI Monorepo - React Native App + Fastify Backend",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:mobile\" \"pnpm run dev:api\"",
    "dev:mobile": "pnpm --filter @food-ai/mobile dev",
    "dev:api": "pnpm --filter @food-ai/api dev",
    "build": "pnpm run build:mobile && pnpm run build:api",
    "build:mobile": "pnpm --filter @food-ai/mobile build",
    "build:api": "pnpm --filter @food-ai/api build",
    "test": "pnpm run test:mobile && pnpm run test:api",
    "test:mobile": "pnpm --filter @food-ai/mobile test",
    "test:api": "pnpm --filter @food-ai/api test",
    "lint": "pnpm run lint:mobile && pnpm run lint:api",
    "lint:mobile": "pnpm --filter @food-ai/mobile lint",
    "lint:api": "pnpm --filter @food-ai/api lint",
    "clean": "pnpm run clean:mobile && pnpm run clean:api",
    "clean:mobile": "pnpm --filter @food-ai/mobile clean",
    "clean:api": "pnpm --filter @food-ai/api clean",
    "type-check": "pnpm run type-check:mobile && pnpm run type-check:api",
    "type-check:mobile": "pnpm --filter @food-ai/mobile type-check",
    "type-check:api": "pnpm --filter @food-ai/api type-check",
    "postinstall": "pnpm run setup",
    "setup": "echo 'Setting up monorepo...'",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "concurrently": "^9.1.0",
    "lerna": "^8.2.3",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.14.0"
}